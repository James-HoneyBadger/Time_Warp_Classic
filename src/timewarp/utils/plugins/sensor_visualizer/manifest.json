{
    "name": "Sensor Visualizer",
    "version": "1.0.0",
    "author": "Time_Warp IDE Team",
    "description": "Comprehensive sensor data visualization with real-time charts, data logging, and analysis capabilities",
    "category": "sensors",
    "type": "tool",
    "main": "plugin.py",
    "entry_point": "JAMESPlugin",
    "dependencies": [],
    "permissions": [
        "ui:create_windows",
        "ui:add_menu_items",
        "ui:add_toolbar_items",
        "events:subscribe",
        "events:emit",
        "file:read",
        "file:write"
    ],
    "capabilities": [
        "Real-time sensor data visualization",
        "Multiple chart types (line, bar, gauge, heatmap)",
        "Data logging and export",
        "Sensor management and configuration",
        "Statistics and analysis",
        "Alert system",
        "Custom dashboards"
    ],
    "ui_elements": {
        "menu_items": [
            {
                "menu": "Tools",
                "label": "ğŸ“Š Sensor Visualizer",
                "shortcut": "Ctrl+Shift+S"
            }
        ],
        "toolbar_items": [
            {
                "label": "ğŸ“Š Sensors",
                "tooltip": "Open Sensor Visualizer"
            }
        ]
    },
    "events": {
        "subscribes_to": [
            "sensor_data_received",
            "sensor_connected",
            "sensor_disconnected",
            "data_logging_started",
            "data_logging_stopped"
        ],
        "emits": [
            "sensor_configured",
            "visualization_updated",
            "alert_triggered",
            "data_exported",
            "dashboard_created"
        ]
    },
    "settings": {
        "refresh_rate": {
            "type": "integer",
            "default": 1000,
            "description": "Data refresh rate in milliseconds"
        },
        "max_data_points": {
            "type": "integer", 
            "default": 1000,
            "description": "Maximum data points to display in charts"
        },
        "auto_scale": {
            "type": "boolean",
            "default": true,
            "description": "Auto-scale chart axes"
        },
        "data_logging": {
            "type": "boolean",
            "default": false,
            "description": "Enable automatic data logging"
        }
    },
    "tabs": [
        {
            "name": "ğŸ“Š Live Data",
            "description": "Real-time sensor data visualization"
        },
        {
            "name": "ğŸ“ˆ Charts",
            "description": "Customizable charts and graphs"
        },
        {
            "name": "ğŸ“ Data Log",
            "description": "Historical data logging and analysis"
        },
        {
            "name": "âš™ï¸ Sensors",
            "description": "Sensor configuration and management"
        },
        {
            "name": "ğŸš¨ Alerts",
            "description": "Alert configuration and monitoring"
        }
    ]
}